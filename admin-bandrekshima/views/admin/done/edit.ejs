<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Pesanan Selesai</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/done">Pesanan Selesai</a></li>
            <li class="breadcrumb-item active">Detail Pesanan Selesai</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Kirim Pesanan "<%= pesanan.name %>"</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/pesanan/edit/<%= pesanan._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Pemilik Pesanan</label>
                  <input type="text" name="name" value="<%= pesanan.userId.name %>" class="form-control" id="name" placeholder="Masukan nama pemilik" required disabled>
                </div>
                <div class="form-group">
                  <label for="bankName">Nama Pesanan</label>
                  <input type="text" name="bankName" value="<%= pesanan.name %>"  class="form-control" id="bankName" placeholder="Masukan nama pesanan" required disabled>
                </div>
                <div class="form-group">
                  <label for="noRekening">Lokasi Pengiriman</label>
                  <input type="text" name="name" value="<%= pesanan.userId.address %>" class="form-control" id="name" placeholder="Masukan nama pemilik" required disabled>
                </div>
                <div class="form-group">
                  <label for="noRekening">Harga</label>
                  <input type="text" name="name" value="Rp <%= pesanan.price.toLocaleString() %>" class="form-control" id="name" placeholder="Masukan nama pemilik" required disabled>
                </div>
<!-- ... Bagian-bagian lainnya ... -->

<div class="form-group">
  <label for="noRekening">Status</label>
  <input type="text" name="name" value="<%= pesanan.status %>" class="form-control" id="name" placeholder="Masukan nama pemilik" required disabled>
</div>

<!-- ... Bagian-bagian lainnya ... -->

              </div>
              <div class="card-footer">
                <!-- <button type="submit" class="btn btn-primary"><b>Ubah Status</b></button> -->
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>